<?xml version="1.0" encoding="utf-8"?>
<layout android:id="@+id/root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.fleet.knock.ui.page.signup.SignUpViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackgroundBrightBlack">

        <ImageView
            android:id="@+id/back"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginStart="9dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/action_bar_guide"
            app:layout_constraintStart_toStartOf="parent"
            android:scaleType="center"
            android:src="@drawable/ic_back"
            android:background="@drawable/ripple_gray_a15_circle_btn"/>

        <TextView
            android:id="@+id/sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/action_bar_guide"
            app:layout_constraintStart_toEndOf="@id/back"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/colorTextWhite"
            android:text="@string/activity_sign_up"/>

        <TextView
            android:id="@+id/complete"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="9dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/action_bar_guide"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:textSize="14sp"
            android:text="@string/activity_sign_up_complete"
            app:backgroundRes="@{vm.completeBackgroundRes}"
            app:textColorRes="@{vm.completeColorRes}"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/action_bar_guide"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="64dp"/>

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="87dp"
            android:layout_height="87dp"
            android:layout_marginTop="6dp"
            android:padding="4dp"
            app:layout_constraintTop_toTopOf="@id/action_bar_guide"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="centerCrop"
            app:circleImgBitmap="@{vm.avatarBitmap}"/>

        <ImageView
            android:id="@+id/edit_avatar"
            android:layout_width="28dp"
            android:layout_height="28dp"
            app:layout_constraintBottom_toBottomOf="@id/avatar"
            app:layout_constraintEnd_toEndOf="@id/avatar"
            android:scaleType="centerInside"
            android:src="@drawable/ic_edit"
            android:background="@drawable/bg_primary_stroke_bright_black_circle" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="36dp"
            android:layout_marginTop="14dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintTop_toBottomOf="@id/avatar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColorHint="@color/colorTextGray"
            app:hintTextColor="@color/colorTextPrimary"
            android:hint="@string/activity_sign_up_id">

            <EditText
                android:id="@+id/id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="36dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:privateImeOptions="defaultInputmode=english"
                android:maxLength="20"
                android:textSize="14sp"
                android:textColor="@color/colorTextWhite"
                android:textCursorDrawable="@drawable/cursor_primary"
                android:text="@={vm.id.text}"
                android:onTextChanged="@{vm.id.onChanged}"
                android:background="@drawable/bg_dark_gray_to_primary_line_edittext"/>
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/check_id"
            android:layout_width="28dp"
            android:layout_height="28dp"
            app:layout_constraintTop_toTopOf="@id/layout_id"
            app:layout_constraintBottom_toBottomOf="@id/layout_id"
            app:layout_constraintEnd_toEndOf="@id/layout_id"
            app:imgRes="@{vm.id.checkRes}"
            android:visibility="@{vm.id.checkVisibility}"/>

        <ProgressBar
            android:id="@+id/check_id_progress"
            android:layout_width="28dp"
            android:layout_height="28dp"
            app:layout_constraintTop_toTopOf="@id/layout_id"
            app:layout_constraintBottom_toBottomOf="@id/layout_id"
            app:layout_constraintEnd_toEndOf="@id/layout_id"
            android:visibility="@{vm.id.progressVisibility}"/>

        <TextView
            android:id="@+id/wrong_id"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/layout_id"
            app:layout_constraintStart_toStartOf="@id/layout_id"
            app:layout_constraintEnd_toEndOf="@id/layout_id"
            android:gravity="start|center_vertical"
            android:textSize="12sp"
            android:textColor="@color/colorTextWhite"
            android:background="@color/colorBackgroundPrimary"
            android:text="@{vm.id.wrongMessage}"
            app:openMessage="@{vm.id.openWrongMessage}"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="36dp"
            android:layout_marginTop="26dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintTop_toBottomOf="@id/layout_id"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColorHint="@color/colorTextGray"
            app:hintTextColor="@color/colorTextPrimary"
            android:hint="@string/activity_sign_up_nickname">

            <EditText
                android:id="@+id/nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="36dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:privateImeOptions="defaultInputmode=korean"
                android:maxLength="20"
                android:textSize="14sp"
                android:textColor="@color/colorTextWhite"
                android:textCursorDrawable="@drawable/cursor_primary"
                android:text="@={vm.nickname.text}"
                android:onTextChanged="@{vm.nickname.onChanged}"
                android:background="@drawable/bg_dark_gray_to_primary_line_edittext"/>
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/check_nickname"
            android:layout_width="28dp"
            android:layout_height="28dp"
            app:layout_constraintTop_toTopOf="@id/layout_nickname"
            app:layout_constraintBottom_toBottomOf="@id/layout_nickname"
            app:layout_constraintEnd_toEndOf="@id/layout_nickname"
            android:visibility="@{vm.nickname.checkVisibility}"
            app:imgRes="@{vm.nickname.checkRes}" />

        <ProgressBar
            android:id="@+id/check_nickname_progress"
            android:layout_width="28dp"
            android:layout_height="28dp"
            app:layout_constraintTop_toTopOf="@id/layout_nickname"
            app:layout_constraintBottom_toBottomOf="@id/layout_nickname"
            app:layout_constraintEnd_toEndOf="@id/layout_nickname"
            android:visibility="@{vm.nickname.progressVisibility}"/>

        <TextView
            android:id="@+id/wrong_nickname"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/layout_nickname"
            app:layout_constraintStart_toStartOf="@id/layout_nickname"
            app:layout_constraintEnd_toEndOf="@id/layout_nickname"
            android:gravity="start|center_vertical"
            android:textSize="12sp"
            android:textColor="@color/colorTextWhite"
            android:background="@color/colorBackgroundPrimary"
            android:text="@{vm.nickname.wrongMessage}"
            app:openMessage="@{vm.nickname.openWrongMessage}"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_introduce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="36dp"
            android:layout_marginTop="26dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintTop_toBottomOf="@id/layout_nickname"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColorHint="@color/colorTextGray"
            app:hintTextColor="@color/colorTextPrimary"
            android:hint="@string/activity_sign_up_introduce">

            <EditText
                android:id="@+id/introduce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="36dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingStart="0dp"
                android:paddingEnd="36dp"
                android:inputType="textMultiLine"
                android:imeOptions="actionDone"
                android:privateImeOptions="defaultInputmode=korean"
                android:maxLength="@{vm.introduce.maxLength}"
                android:maxLines="2"
                android:textSize="14sp"
                android:textColor="@color/colorTextWhite"
                android:textCursorDrawable="@drawable/cursor_primary"
                android:text="@={vm.introduce.text}"
                android:background="@drawable/bg_dark_gray_to_primary_line_edittext"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/remain_introduce_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/layout_introduce"
            app:layout_constraintBottom_toBottomOf="@id/layout_introduce"
            app:layout_constraintEnd_toEndOf="@id/layout_introduce"
            android:textSize="12sp"
            android:text="@{vm.introduce.remain}"
            app:textColorRes="@{vm.introduce.remainColorRes}"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/progress_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="@{vm.uploadingVisibility}"
            android:background="@color/colorBackgroundDialog">

            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>