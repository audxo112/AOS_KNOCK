<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tutorial_frame_container"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="180dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_bright_black_a60_circle">

        <ImageView
            android:id="@+id/tutorial_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintVertical_bias="0.39"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tutorial_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="center"
            android:src="@drawable/ic_tutorial_frame"/>
        
        <TextView
            android:id="@+id/tutorial_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tutorial_img"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/colorTextWhite"
            android:textSize="12sp"
            android:text="@string/dialog_tutorial_editor_frame"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>