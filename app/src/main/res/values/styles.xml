<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@drawable/bg_launch_screen</item>
        <item name="android:statusBarColor" tools:targetApi="23">@color/colorBackgroundBrightBlack</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <item name="android:windowEnterAnimation">@android:anim/anticipate_interpolator</item>
        <item name="android:windowExitAnimation">@android:anim/accelerate_interpolator</item>
    </style>

    <style name="TransTheme" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="FastTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowAnimationStyle">@null</item>

        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="DialogTheme" parent="AppTheme">
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="HashTagItem">
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorTextGray</item>
        <item name="android:background">@drawable/bg_dark_gray_r19_box</item>
    </style>

    <style name="TabText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TabSelectedText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TabUnselectedText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="BottomUpDialogStyle">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowEnterAnimation">@anim/anim_slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/anim_slide_out_bottom</item>
    </style>
</resources>
