<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:top="58dp">

        <shape
            android:shape="rectangle">

            <solid
                android:color="@color/colorBackgroundGray3"/>

            <corners
                android:bottomLeftRadius="8dp"
                android:bottomRightRadius="8dp"/>
        </shape>
    </item>

    <item
        android:gravity="top">
        <shape
            android:shape="rectangle">

            <size
                android:height="59dp"/>

            <gradient
                android:endColor="@color/colorBackgroundWhite2"
                android:startColor="@color/colorBackgroundGray3"
                android:angle="90"/>
            </shape>
        </item>
</layer-list>